@model GenreDTO
@{
    ViewData["Title"] = ViewBag.Action == "Add" ? "Thêm Thể Loại" : "Chỉnh Sửa Thể Loại";
}

<form asp-action="Upsert" method="post">
    <div class="row p-3 border">
        <div class="col-md-12 border-bottom">
            <h2 class="text-primary">@ViewData["Title"]</h2>
        </div>
        <div class="col-md-8 pt-4">
            <input type="hidden" asp-for="GenreId" />

            <div class="mb-3 row">
                <div class="col-md-3">
                    <label class="form-label" asp-for="GenreName">Thể Loại</label>
                </div>
                <div class="col-md-9">
                    <input class="form-control" asp-for="GenreName" />
                    <span class="text-danger" asp-validation-for="GenreName"></span>
                </div>
            </div>

            <partial name="_ActionOrReturnPartial" />
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}