@{
    ViewData["Title"] = "Quản Lý Phim";
}

<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Tất Cả Phim</h2>
    </div>
    <div class="col-6 text-end">
        <a class="btn btn-primary" asp-action="Upsert">
            <span class="fas fa-plus"></span>&nbsp;Tạo Mới
        </a>
    </div>
</div>

<div class="p-4 border-top border-bottom">
    <table id="datatable-movie" class="table table-striped table-bordered" style="width:100%">
        <thead class="table-info">
            <tr>
                <th>Tiêu đề</th>
                <th>Diễn viên</th>
                <th>Thể loại</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/datatable/movie.js"></script>
    <script src="~/js/datatable/confirm-delete.js"></script>
}