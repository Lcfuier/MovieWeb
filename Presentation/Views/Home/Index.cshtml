@model HomeDisplayDTO;
@{
    ViewData["Title"] = "Home Page";
}
@{
    var topMovieUpcoming = (from a in Model.movies
                            where a.Released == false
                            select a).ToList();
    var topRatedMovie = Model.movies.OrderByDescending(x => x.AverageStar).Take(10);
}
<div>

        <!--
          - #HERO
        -->

    <section class="hero" style="background-image: url('./assets/images/hero-bg.jpg')">
        
            <div class="container">

                <div class="hero-content">
                    
                        <p class="hero-subtitle">Không có tên</p>
                    
                    
                    <h1 class="h1 hero-title">
                        Unlimited <strong>Movie</strong>, TVs Shows, & More.
                    </h1>

                    <div class="meta-wrapper">

                        <div class="badge-wrapper">
                            <div class="badge badge-fill">PG 18</div>

                            <div class="badge badge-outline">HD</div>
                        </div>

                        <div class="ganre-wrapper">
                            <a href="#">Romance,</a>

                            <a href="#">Drama</a>
                        </div>

                        <div class="date-time">

                            <div>
                                <ion-icon name="calendar-outline"></ion-icon>

                                <time datetime="1000">2022</time>
                            </div>

                            <div>
                                <ion-icon name="time-outline"></ion-icon>

                                <time datetime="PT128M">128 min</time>
                            </div>

                        </div>

                    </div>

                    <button class="btn btn-primary">
                        <ion-icon name="play"></ion-icon>

                        <span>Watch now</span>
                    </button>

                </div>

            </div>
        </section>





        <!--
          - #UPCOMING
        -->

        <section class="upcoming">
            <div class="container">

                <div class="flex-wrapper">

                    <div class="title-wrapper">
                        <p class="section-subtitle">Online Streaming</p>

                        <h2 class="h2 section-title">Upcoming Movies</h2>
                    </div>

                    

                </div>

            <ul class="movies-list  has-scrollbar col-md-12">
                @foreach (var film in topMovieUpcoming)
                {
                    <li class=" col-md-3">
                        <div class="movie-card">

                            <a asp-controller="Movie" asp-action="Detail" asp-route-id="@film.MovieId">
                                <figure class="card-banner">
                                    <img src="~/assets/images/@film.ImageURL" alt="The Northman movie poster">
                                </figure>
                            </a>

                            <div class="title-wrapper">
                                <a asp-controller="Movie" asp-action="Detail" asp-route-id="@film.MovieId">
                                    <h3 class="card-title">@film.Title</h3>
                                </a>

                                <time datetime="2022">@film.ReleaseYear</time>
                            </div>

                            <div class="card-meta">
                                <div class="badge badge-outline">@film.quality</div>

                                <div class="duration">
                                    <ion-icon name="time-outline"></ion-icon>

                                    <time datetime="PT137M">@film.MovieDuration min</time>
                                </div>

                                <div class="rating">
                                    <ion-icon name="star"></ion-icon>

                                    <data>@film.AverageStar</data>
                                </div>
                            </div>

                        </div>
                    </li>
                }
                
                </ul>

            </div>
        </section>





        <!--
          - #SERVICE
        -->



        <!--
          - #TOP RATED
        -->

        <section class="top-rated">
            <div class="container">

                <p class="section-subtitle">Online Streaming</p>

                <h2 class="h2 section-title">Top Rated Movies</h2>

                

                <ul class="movies-list">
                @foreach(var movie in topRatedMovie)
                {
                    <li>
                        <div class="movie-card">

                            <a asp-controller="Movie" asp-action="Detail" asp-route-id="@movie.MovieId">
                                <figure class="card-banner">
                                    <img src="./assets/images/@movie.ImageURL" alt="Sonic the Hedgehog 2 movie poster">
                                </figure>
                            </a>

                            <div class="title-wrapper">
                                <a href="./movie-details.html">
                                    <h3 class="card-title">@movie.Title</h3>
                                </a>

                                <time datetime="2022">@movie.ReleaseYear</time>
                            </div>

                            <div class="card-meta">
                                <div class="badge badge-outline">@movie.quality</div>

                                <div class="duration">
                                    <ion-icon name="time-outline"></ion-icon>

                                    <time datetime="PT122M">@movie.MovieDuration min</time>
                                </div>

                                <div class="rating">
                                    <ion-icon name="star"></ion-icon>

                                    <data>@movie.AverageStar</data>
                                </div>
                            </div>

                        </div>
                    </li>
                }

                </ul>

            </div>
        </section>





        <!--
          - #TV SERIES
        -->



</div>




       


